</header>


<body class="container">
    <div class="row m-3 mt-5">
        <div class="col">
            <% if (user){%>
            <form>
                <div class="row g-3">
                    <input type="text" id="id-edit-user" value="<%=user.idusuario%>" hidden>
                    <div class="col">
                        <label>Nombre del Usuario</label>
                        <input type="text" id="nom-edit-user" value="<%=user.nombre%>" class="form-control"
                            placeholder="Nombre del Usuario" aria-label="First name" required>
                    </div>
                    <div class="col">
                        <label>Password</label>
                        <input type="password" id="pass-edit-user" value="<%=user.password%>" class="form-control"
                            placeholder="Password" aria-label="First name" required>
                    </div>
                    <div class="col">
                        <label>Rol</label>
                        <select class="form-select" aria-label="Default select example" id="rol-edit-user" required>
                            <option value="1">SuperAdministrador</option>
                            <option value="2">Administrador</option>
                            <option selected value="3">Vendedor</option>
                        </select>
                    </div>
                </div>
            </form>
            <% } %>
            <div class="d-grid gap-3 d-md-flex justify-content-md-end mt-3">
                <button type="submit" id="btn-edit-user" class="btn btn-dark mt-3">Guardar</button>
                <a href="/editusercancelar" class="btn btn-dark mt-3">Cancelar</a>
                <script src="../editarusuario.js"></script>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>

</body>

